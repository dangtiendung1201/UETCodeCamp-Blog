<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add" class="button">+ Add New</a>
  </div>
  
  <ul class="admin-posts">
  
    <% posts.forEach(post => { %>
     
      <li>
        <a href="/posts/<%= post.id %>">
          <%= post.title %> &nearr;
        </a>
        <div class="admin-post-controls">
          <a href="/edit/<%= post.id %>" class="btn">Edit</a>
  
          <form action="/delete/<%= post.id %>" method="DELETE">
            <input type="submit" value="Delete" class="btn-delete btn">
          </form>
  
        </div>
  
      </li>
  
    <% }) %>
  </ul>