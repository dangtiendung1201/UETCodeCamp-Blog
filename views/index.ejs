
<div class="author">
    <h1 class = "author__heading">Chao buoi sang.</h1>
    <p class = "author__body">cuu toi cuu toi cuu toi.</p>
</div>

<img src="/img/pan.png" alt="waifu wearing glasses" class = "waifu-image" width = "528" height = "528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/posts/<%= post.id %>">
                    <span><%= post.title %></span>
                    <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %> 
    </ul>
    <% if (nextPage != null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
    
</section>

